<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef ParentName="SurgeryFlesh">
    <defName>ArtificialComa</defName>
    <label>artificial coma</label>
    <description>Render a creature unconscious for undefined time by administering artificial coma drug. A high dose of WakeUp will be required to revert this!</description>
    <workerClass>DeathRattle.Recipe_AdministerComaDrug</workerClass>
    <jobString>putting into artificial coma.</jobString>
    <workAmount>400</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
	<anesthetize>false</anesthetize>
    <surgerySuccessChanceFactor>2</surgerySuccessChanceFactor>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
	<appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
  </RecipeDef>

</Defs>
